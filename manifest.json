// manifest.json
{
  "manifest_version": 3,
  "name": "Google Meet Recorder",
  "version": "1.0",
  "description": "Record Google Meet calls and mark highlights.",
  "permissions": ["activeTab", "desktopCapture"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
